@using HR_Project.Application.Models.VMs;
@model PermissionListVM


<div class="content-wrapper">
    <div class="row" style="height: 50px;"></div>
    <div class="row">
        <div class="col-12 grid-margin">
            <div class="card">
                <div class="card-body">
                    <ul class="nav nav-tabs" id="myTabs">
                        <li class="nav-item">
                            <a class="nav-link active" data-toggle="tab" href="#pendingRequests">Pending Requests</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-toggle="tab" href="#acceptedRequests">Accepted Requests</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-toggle="tab" href="#rejectedRequests">Rejected Requests</a>
                        </li>
                    </ul>


                    <div class="tab-content" >
                        <div id="pendingRequests" class="tab-pane fade show active" >
                            <!-- Bekleyen İstekler Tablosu Burada -->
                            <div class="table-responsive">
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th>Day Off Type</th>
                                            <th>Days</th>
                                            <th>First Date</th>
                                            <th>Expiration Date</th>
                                            <th>Request Date</th>
                                            <th>Cancel Request</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.PendingPermissions)
                                        {
                                            <tr style="background-color:white">
                                                <td>@item.PermissionType.Name</td>
                                                <td>@item.NumberOfDays</td>
                                                <td>@item.StartDate.ToShortDateString()</td>
                                                <td>@item.ExpirationDate.ToShortDateString()</td>
                                                <td>@item.RequestDate.ToShortDateString()</td>
                                                <td><button asp-route-id="@item.ID" class="btn btn-danger mdi mdi-delete" onclick="return confirm('Are you sure you want to delete?')"></button></td>
                                            </tr>
                                        }

                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div id="acceptedRequests" class="tab-pane fade">
                            <!-- Kabul Edilen İstekler Tablosu Burada -->
                            <div class="table-responsive" >
                                <table class="table table-striped" style="background-color:white">
                                    <thead>
                                        <tr>
                                            <th>Name</th>
                                            <th>Days</th>
                                            <th>Start Date</th>
                                            <th>Expiration Date</th>
                                            <th>Request Date</th>
                                            <th>Reply Date</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.AcceptedPermissions)
                                        {
                                            <tr>
                                                <td>@item.PermissionType.Name</td>
                                                <td>@item.NumberOfDays</td>
                                                <td>@item.StartDate.ToShortDateString()</td>
                                                <td>@item.ExpirationDate.ToShortDateString()</td>
                                                <td>@item.RequestDate.ToShortDateString()</td>
                                                <td>@item.ReplyDate</td>
                                            </tr>
                                        }

                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div id="rejectedRequests" class="tab-pane fade">
                            <!-- Reddedilen İstekler Tablosu Burada -->
                            <div class="table-responsive">
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th>Name</th>
                                            <th>Days</th>
                                            <th>Start Date</th>
                                            <th>Expiration Date</th>
                                            <th>Request Date</th>
                                            <th>Reply Date</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.RejectedPermissions)
                                        {
                                            <tr>
                                                <td>@item.PermissionType.Name</td>
                                                <td>@item.NumberOfDays</td>
                                                <td>@item.StartDate.ToShortDateString()</td>
                                                <td>@item.ExpirationDate.ToShortDateString()</td>
                                                <td>@item.RequestDate.ToShortDateString()</td>
                                                <td>@item.ReplyDate</td>
                                            </tr>
                                        }

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <a class="btn btn-success ml-auto " href="/Home/Index"> Go Back</a>
                </div>
            </div>
        </div>
    </div>
</div>






<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.min.js"></script>

<script>
    $(document).ready(function () {
        $('#myTabs a').on('click', function (e) {
            e.preventDefault();
            $(this).tab('show');
        });
    });
</script>

<!-- Tabs content -->
